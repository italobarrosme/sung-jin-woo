{
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.fixAll.eslint": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode", // Define o Prettier como o formatador padr√£o

  "editor.formatOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "cypress",
    "**/*.cy.{js,jsx,ts,tsx}"
  ],
  "eslint.options": {
    "extensions": [".js", ".jsx", ".ts", ".tsx", ".cy.ts", ".cy.tsx"]
  },
  "typescript.tsdk": "node_modules\\typescript\\lib"
}
